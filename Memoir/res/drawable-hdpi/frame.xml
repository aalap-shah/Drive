<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="6dp"
        android:left="7dp"
        android:right="6dp"
        android:top="8dp">
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <gradient
                android:angle="90"
                android:centerColor="#00000000"
                android:centerX="0.3"
                android:centerY="0.4"
                android:endColor="#00000000"
                android:startColor="#AA000000"
                android:type="linear" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#00FFFFFF"
                android:endColor="#AAFFFFFF"
                android:startColor="#AAFFFFFF"
                android:type="linear" />

            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>