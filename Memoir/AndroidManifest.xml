<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agreeya.memoir"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.agreeya.memoir.MemoirApp"
        android:allowBackup="true"
        android:icon="@drawable/rsz_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.agreeya.memoir.DriveActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.agreeya.memoir.VideoPlayer" />

        <receiver android:name="com.agreeya.memoir.receivers.AlarmReceiver" />

        <service android:name="com.agreeya.memoir.services.ControllerService" />
        <service android:name="com.agreeya.memoir.services.PhotoShotService" />
        <service android:name="com.agreeya.memoir.services.FFMpegService" />
        <service android:name="com.agreeya.memoir.services.VideoRecorderService" />
        <service android:name="com.agreeya.memoir.services.AudioRecorderService" />
        <service android:name="com.agreeya.memoir.services.InsertIntoDBService" />
        <service android:name="com.agreeya.memoir.services.DispatcherService" />
        <service android:name="com.agreeya.memoir.services.CompilerService" />
    </application>

</manifest>